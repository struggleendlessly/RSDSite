<h1 class="visually-hidden">Headers examples</h1>

<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="@(SiteName + StaticRoutesStrings.MainPageRoute)" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            @if (Model.Data != null)
            {
                <img src="@Model.Data[StaticStrings.AdminPageDataLogoKey]" style="max-height: 50px;" />
            }
            <span class="fs-4">Simple header</span>
        </a>

        <ul class="nav nav-pills">
            <li class="nav-item">
                <a href="@(SiteName + StaticRoutesStrings.MainPageRoute)" class="nav-link @(HighlightActiveMenuItem(SiteName + StaticRoutesStrings.MainPageRoute))" aria-current="page">Main</a>
            </li>
            <li class="nav-item">
                <a href="@(SiteName + StaticRoutesStrings.AboutUsPageRoute)" class="nav-link @(HighlightActiveMenuItem(SiteName + StaticRoutesStrings.AboutUsPageRoute))">About Us</a>
            </li>
            <li class="nav-item">
                <a href="@(SiteName + StaticRoutesStrings.ContactUsPageRoute)" class="nav-link @(HighlightActiveMenuItem(SiteName + StaticRoutesStrings.ContactUsPageRoute))">Contact Us</a>
            </li>
            <li class="nav-item">
                <a href="@(SiteName + StaticRoutesStrings.ServicesPageRoute)" class="nav-link @(HighlightActiveMenuItem(SiteName + StaticRoutesStrings.ServicesPageRoute))">Services</a>
            </li>
            @if (SiteName == string.Empty || SiteName == StaticStrings.DefaultSiteName)
            {
                <li class="nav-item">
                    <a href="@(SiteName + StaticRoutesStrings.PricingPageRoute)" class="nav-link @(HighlightActiveMenuItem(SiteName + StaticRoutesStrings.PricingPageRoute))">Pricing</a>
                </li>
            }
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item">
                        <a href="@StaticRoutesStrings.LogoutPageRoute" class="btn btn-primary btn-transition">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a href="@(SiteName + StaticRoutesStrings.AdminPageRoute)" class="btn btn-primary btn-transition">Admin</a>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <li class="nav-item">
                        <a href="@StaticRoutesStrings.LoginPageRoute" class="btn btn-primary btn-transition">Login</a>
                    </li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </header>

</div>

