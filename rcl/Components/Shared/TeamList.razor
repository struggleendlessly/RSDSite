@{
    if (Model.Data != null && Model.Data.Count > 0)
    {
        for (int i = 0; i < ServiceItems.Count; i++)
        {
            var serviceKeyIndex = i * 5;
            var serviceKey = Model.Data.ElementAt(serviceKeyIndex).Value;
            var serviceImageKey = serviceKey + StaticStrings.ImageKeyEnding;
            var serviceTitleKey = serviceKey + StaticStrings.TitleKeyEnding;
            var serviceSubtitleKey = serviceKey + StaticStrings.SubtitleKeyEnding;
            var serviceTextKey = serviceKey + StaticStrings.TextKeyEnding;

            <div class="col">
                <div class="card h-100">
                    <AuthorizeView>
                        <Authorized>
                            @if (StateManager.CanEditSite())
                            {
                                <div class="mb-2 mt-2">
                                    <button class="badge bg-success" @onclick="() => Add(serviceKey)" disabled="@isAdding">+</button>
                                    <button class="badge bg-danger" @onclick="() => Remove(serviceKey)" disabled="@isAdding">-</button>
                                </div>
                            }
                        </Authorized>
                    </AuthorizeView>
                    <ImageEditor EditorId="@(StaticHtmlStrings.ImageEditorAboutUsTeamListImageId + serviceKeyIndex)"
                                 Model="Model"
                                 FuncSave="SaveContent"
                                 Key="@serviceImageKey">
                        <img src="@Model.Data[serviceImageKey]" class="card-img-top" alt="..." />
                    </ImageEditor>
                    
                    <div class="card-body">
                        <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsTeamListSubtitleId + serviceKeyIndex)"
                                    EditorContentFormat="@(StaticStrings.EditorContentFormatText)"
                                    Model="Model"
                                    FuncSave="SaveContent"
                                    Key="@serviceSubtitleKey">
                            <span class="card-subtitle">
                                @((MarkupString) Model.Data[serviceSubtitleKey])
                            </span>
                        </HTMLEditor>
                        <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsTeamListTitleId + serviceKeyIndex)"
                                    EditorContentFormat="@(StaticStrings.EditorContentFormatText)"
                                    Model="Model"
                                    FuncSave="SaveContent"
                                    Key="@serviceTitleKey">
                            <h5 class="card-title">
                                @((MarkupString) Model.Data[serviceTitleKey])
                            </h5>
                        </HTMLEditor>
                        <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsTeamListTextId + serviceKeyIndex)"
                                    EditorContentFormat="@(StaticStrings.EditorContentFormatText)"
                                    Model="Model"
                                    FuncSave="SaveContent"
                                    Key="@serviceTextKey">
                            <p class="card-text">
                                @((MarkupString) Model.Data[serviceTextKey])
                            </p>
                        </HTMLEditor>
                    </div>
                </div>
            </div>
        }
    }
}
