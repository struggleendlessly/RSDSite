@{
    if (Model.Data != null && Model.Data.Count > 0)
    {
        for (int i = 0; i < ServiceItems.Count; i++)
        {
            var serviceKeyIndex = i * 5;
            var serviceKey = Model.Data.ElementAt(serviceKeyIndex).Value;
            var serviceImageKey = serviceKey + StaticStrings.ServicesImageKeyEnding;
            var serviceTitleKey = serviceKey + StaticStrings.ServicesTitleKeyEnding;
            var serviceSubtitleKey = serviceKey + StaticStrings.ServicesSubtitleKeyEnding;
            var serviceTextKey = serviceKey + StaticStrings.ServicesTextKeyEnding;

            <div class="col-sm-6 col-lg-3 mb-3">
                <!-- Card -->
                <div class="card card-transition h-100">
                    <div class="card-body">
                        <AuthorizeView>
                            <Authorized>
                                <div class="mb-2 mt-2">
                                    <button class="badge bg-success" @onclick="() => Add(serviceKey)">+</button>
                                    <button class="badge bg-danger" @onclick="() => Remove(serviceKey)">-</button>
                                </div>
                            </Authorized>
                        </AuthorizeView>
                        <div class="avatar avatar-lg avatar-circle d-block mb-4">
                            <img class="avatar-img" src="@Model.Data[serviceImageKey]" alt="Image Description">
                        </div>
                        <TinyMceEditor 
                            TinyMceId="@(StaticHtmlStrings.TinyAboutUsTeamListSubtitleId + serviceKeyIndex)"
                            TinyMceContentFormat="@(StaticStrings.TinyContentFormatText)"
                            Model="Model"
                            FuncSave="SaveContent"
                            Key="@serviceSubtitleKey">
                                <span class="card-subtitle">
                                    @Model.Data[serviceSubtitleKey]
                                </span>
                        </TinyMceEditor>
                        <TinyMceEditor 
                            TinyMceId="@(StaticHtmlStrings.TinyAboutUsTeamListTitleId + serviceKeyIndex)"
                            TinyMceContentFormat="@(StaticStrings.TinyContentFormatText)"
                            Model="Model"
                            FuncSave="SaveContent"
                            Key="@serviceTitleKey">
                                <h4 class="card-title">
                                    @Model.Data[serviceTitleKey]
                                </h4>
                        </TinyMceEditor>
                        <TinyMceEditor 
                            TinyMceId="@(StaticHtmlStrings.TinyAboutUsTeamListTextId + serviceKeyIndex)"
                            TinyMceContentFormat="@(StaticStrings.TinyContentFormatText)"
                            Model="Model"
                            FuncSave="SaveContent"
                            Key="@serviceTextKey">
                                <p class="card-text">
                                    @Model.Data[serviceTextKey]
                                </p>
                        </TinyMceEditor>
                    </div>
                </div>
                <!-- End Card -->
            </div>
            <!-- End Col -->
        }
    }
}
