<div class="px-2 py-1 text-center container">
    @if (Model.Data is not null && PopoversModel.Data is not null)
    {
        <!-- CSSMainTitle_h1 -->
        <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsTitleId)"
                    EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                    Model="Model"
                    FuncSave="Save"
                    Key="@(StaticStrings.AboutUsPageDataTitleKey)"
                    PopoversModel="PopoversModel"
                    PopoverKey="@StaticStrings.Popover_AboutUs_1_Title">
            <h1 class="@StaticHtmlStrings.CSSMainTitle_h1">
                @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataTitleKey])
            </h1>
        </HTMLEditor>

        <!-- CSSMainSubTitle_p -->
        <div class="col-lg-6 mx-auto">
            <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsSubtitleId)"
                        EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                        Model="Model"
                        FuncSave="Save"
                        Key="@(StaticStrings.AboutUsPageDataSubtitleKey)"
                        PopoversModel="PopoversModel"
                        PopoverKey="@StaticStrings.Popover_AboutUs_1_Subtitle">
                <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                    @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataSubtitleKey])
                </p>
            </HTMLEditor>
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center py-5">
            <a href="@StateManager.GetPageUrl(StaticRoutesStrings.ContactUsPageUrl)" class="@StaticHtmlStrings.CSSButtonDarkInTheText">
                Get in touch
            </a>
        </div>

        <!-- img -->
        <ImageEditor EditorId="@StaticHtmlStrings.ImageEditorAboutUsCarouselImage1Id"
                     Model="Model"
                     FuncSave="Save"
                     Key="@(StaticStrings.AboutUsPageDataCarouselImage1Key)"
                     PopoversModel="PopoversModel"
                     PopoverKey="@StaticStrings.Popover_AboutUs_1_ImageEditor">
        </ImageEditor>

        <ImageEditor EditorId="@StaticHtmlStrings.ImageEditorAboutUsCarouselImage2Id"
                     Model="Model"
                     FuncSave="Save"
                     Key="@(StaticStrings.AboutUsPageDataCarouselImage2Key)">
        </ImageEditor>

        <ImageEditor EditorId="@StaticHtmlStrings.ImageEditorAboutUsCarouselImage3Id"
                     Model="Model"
                     FuncSave="Save"
                     Key="@(StaticStrings.AboutUsPageDataCarouselImage3Key)">
        </ImageEditor>

        <div id="carouselExampleDark" class="carousel carousel-dark slide mb-5" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>

                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>

                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="@Model.Data[StaticStrings.AboutUsPageDataCarouselImage1Key]"
                         class="d-block w-100 rounded" alt="...">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="@Model.Data[StaticStrings.AboutUsPageDataCarouselImage2Key]"
                         class="d-block w-100 rounded" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="@Model.Data[StaticStrings.AboutUsPageDataCarouselImage3Key]"
                         class="d-block w-100 rounded" alt="...">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Numbers with description -->
        <div class="row justify-content-lg-center my-5">
            <!-- 1 -->
            <div class="col-sm-4 col-lg-3 mb-7 text-center">
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsFeatureStatsFirstTitleId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataFeatureStatsFirstTitleKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_2_1_Title">
                    <h2 class="@StaticHtmlStrings.CSSMainTitle_h2">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataFeatureStatsFirstTitleKey])
                    </h2>
                </HTMLEditor>
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsFeatureStatsFirstSubtitleId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataFeatureStatsFirstSubtitleKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_2_1_Subtitle">
                    <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataFeatureStatsFirstSubtitleKey])
                    </p>
                </HTMLEditor>
            </div>

            <!-- 2 -->
            <div class="col-sm-4 col-lg-3 mb-7 text-center">
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsFeatureStatsSecondTitleId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataFeatureStatsSecondTitleKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_2_2_Title">
                    <h2 class="@StaticHtmlStrings.CSSMainTitle_h2">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataFeatureStatsSecondTitleKey])
                    </h2>
                </HTMLEditor>
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsFeatureStatsSecondSubtitleId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataFeatureStatsSecondSubtitleKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_2_2_Subtitle">
                    <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataFeatureStatsSecondSubtitleKey])
                    </p>
                </HTMLEditor>
            </div>

            <!-- 3 -->
            <div class="col-sm-4 col-lg-3 text-center">
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsFeatureStatsThirdTitleId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataFeatureStatsThirdTitleKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_2_3_Title">
                    <h2 class="@StaticHtmlStrings.CSSMainTitle_h2">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataFeatureStatsThirdTitleKey])
                    </h2>
                </HTMLEditor>
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsFeatureStatsThirdSubtitleId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataFeatureStatsThirdSubtitleKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_2_3_Subtitle">
                    <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataFeatureStatsThirdSubtitleKey])
                    </p>
                </HTMLEditor>
            </div>
        </div>

        <!-- Block with title left side -->
        <div class="row featurette">
            <div class="col-md-5 order-md-1">
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsInfoLeftId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataInfoLeftKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_3_Title">
                    <h2 class="@StaticHtmlStrings.CSSMainTitle_h2">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataInfoLeftKey])
                    </h2>
                </HTMLEditor>
            </div>
            <div class="col-md-7 order-md-2">
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsInfoRightFirstId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataInfoRightFirstKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_3_1_Subtitle">
                    <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataInfoRightFirstKey])
                    </p>
                </HTMLEditor>
                <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsInfoRightSecondtId)"
                            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                            Model="Model"
                            FuncSave="Save"
                            Key="@(StaticStrings.AboutUsPageDataInfoRightSecondKey)"
                            PopoversModel="PopoversModel"
                            PopoverKey="@StaticStrings.Popover_AboutUs_3_2_Subtitle">
                    <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                        @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataInfoRightSecondKey])
                    </p>
                </HTMLEditor>
            </div>
        </div>

        <!-- Title and Sub for the List of -->
        <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
            <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsTeamTitleId)"
                        EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                        Model="Model"
                        FuncSave="Save"
                        Key="@(StaticStrings.AboutUsPageDataTeamTitleKey)"
                        PopoversModel="PopoversModel"
                        PopoverKey="@StaticStrings.Popover_AboutUs_4_Title">
                <h2 class="@StaticHtmlStrings.CSSMainTitle_h2">
                    @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataTeamTitleKey])
                </h2>
            </HTMLEditor>

            <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorAboutUsTeamSubtitleId)"
                        EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                        Model="Model"
                        FuncSave="Save"
                        Key="@(StaticStrings.AboutUsPageDataTeamSubtitleKey)"
                        PopoversModel="PopoversModel"
                        PopoverKey="@StaticStrings.Popover_AboutUs_4_Subtitle">
                <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                    @((MarkupString)Model.Data[StaticStrings.AboutUsPageDataTeamSubtitleKey])
                </p>
            </HTMLEditor>
        </div>

        <!-- List of -->
        <TeamList 
            PopoversModel="PopoversModel"
            PopoverKey="@StaticStrings.Popover_AboutUs_1_Card">
        </TeamList>
    }
</div>
