<div class="px-2 py-1 text-center container">
    @if (Model.Data is not null)
    {
        var titleKey = Key + StaticStrings.TitleKeyEnding;
        var subtitleKey = Key + StaticStrings.SubtitleKeyEnding;
        var imageKey = Key + StaticStrings.ImageKeyEnding;

        <!-- CSSMainTitle_h1 -->
        <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorServiceTitleId)"
                    EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                    Model="Model"
                    FuncSave="Save"
                    Key="@titleKey">
            <h1 class="@StaticHtmlStrings.CSSMainTitle_h1">
                @((MarkupString)Model.Data[titleKey])
            </h1>
        </HTMLEditor>

        <!-- CSSMainSubTitle_p -->
        <div class="col-lg-6 mx-auto">
            <HTMLEditor EditorId="@(StaticHtmlStrings.HTMLEditorServiceSubtitleId)"
                        EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
                        Model="Model"
                        FuncSave="Save"
                        Key="@subtitleKey">
                <p class="@StaticHtmlStrings.CSSMainSubTitle_p">
                    @((MarkupString)Model.Data[subtitleKey])
                </p>
            </HTMLEditor>
        </div>

        <!-- img -->
        <ImageEditor EditorId="@StaticHtmlStrings.ImageEditorServiceImageId"
                     Model="Model"
                     FuncSave="Save"
                     Key="@imageKey">
            <img src="@Model.Data[imageKey]" class="img-fluid rounded mb-5" alt="Example image" loading="lazy" />
        </ImageEditor>

        <HTMLEditor 
            EditorId="@(StaticHtmlStrings.HTMLEditorServicePageContentId)"
            EditorContentFormat="@(StaticStrings.EditorContentFormatHtml)"
            Model="Model"
            FuncSave="Save"
            Key="@Key">
                <p>@((MarkupString)Model.Data[Key])</p> 
        </HTMLEditor>
    }
</div>
