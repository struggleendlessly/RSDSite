@using shared

@attribute [Route(StaticRoutesStrings.AccountConfirmEmailPageRoute)]

@rendermode InteractiveServer

<PageTitle>Confirm email</PageTitle>

@if (LocalizationModel.Data is not null)
{
    <!-- ========== MAIN CONTENT ========== -->
    <main id="content" role="main">
        <!-- Form -->
        <div class="container content-space-3 content-space-t-lg-4 content-space-b-lg-3">
            <h1>
                @LocalizationModel.Data[StaticStrings.Localization_Account_ConfirmEmail_Title_Key]
            </h1>
            <StatusMessage Message="@statusMessage" />
            @if (ShowEmailResendLink)
            {
                <button type="button" class="btn btn-link text-decoration-none" @onclick="ResendConfirmationEmailAsync" disabled="@DisableEmailResendLink">
                    @LocalizationModel.Data[StaticStrings.Localization_Account_ConfirmEmail_Link_ResendEmail_Key]
                </button>
            }
        </div>
        <!-- End Form -->
    </main>
    <!-- ========== END MAIN CONTENT ========== -->
}
