@using shared

@attribute [Route(StaticRoutesStrings.AccountConfirmEmailPageRoute)]

@rendermode InteractiveServer

<PageTitle>Confirm email</PageTitle>

<!-- ========== MAIN CONTENT ========== -->
<main id="content" role="main">
    <!-- Form -->
    <div class="container content-space-3 content-space-t-lg-4 content-space-b-lg-3">
        <h1>Confirm email</h1>
        <StatusMessage Message="@statusMessage" />
        @if (ShowEmailResendLink)
        {
            <button type="button" class="btn btn-link text-decoration-none" @onclick="ResendConfirmationEmailAsync" disabled="@DisableEmailResendLink">Resend the confirmation email</button>
        }
    </div>
    <!-- End Form -->
</main>
<!-- ========== END MAIN CONTENT ========== -->
